<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="60" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="1st number" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="20"
                android:fontFamily="serif"
                android:text=" n1 is less than n2 " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:onClick="reset"
                android:text="Clear" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Counter: 0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="True/False" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="20"
                android:fontFamily="serif"
                android:text=" n1 is eqaul to n2 " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:fontFamily="serif"
                android:onClick="randomNumbers"
                android:text="Random numbers" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="60" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:fontFamily="serif"
                android:gravity="center_horizontal|center_vertical"
                android:text="2nd number" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:fontFamily="serif"
                android:text=" n1 is more than n2 " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>